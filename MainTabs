import { Ionicons } from "@expo/vector-icons";
import { createBottomTabNavigator } from "@react-navigation/bottom-tabs";
import { BlurView } from "expo-blur";
import * as Haptics from "expo-haptics";
import { useEffect, useRef } from "react";
import {
  Animated,
  Dimensions,
  Easing,
  Platform,
  Pressable,
  StyleSheet,
  View,
} from "react-native";

import ApplyLeaveScreen from "./ApplyLeaveScreen";
import CalendarScreen from "./CalendarScreen";
import HistoryScreen from "./HistoryScreen";
import ProfileScreen from "./ProfileScreen";

const Tab = createBottomTabNavigator();
const { width } = Dimensions.get("window");
const TAB_WIDTH = width / 4;

// Exact iOS Tab Indicator (like Alarm app)
const IOSTabIndicator = ({ index, isFocused }) => {
  const scaleAnim = useRef(new Animated.Value(0)).current;
  const opacityAnim = useRef(new Animated.Value(0)).current;

  useEffect(() => {
    if (isFocused) {
      Animated.parallel([
        Animated.spring(scaleAnim, {
          toValue: 1,
          tension: 200,
          friction: 15,
          useNativeDriver: true,
        }),
        Animated.timing(opacityAnim, {
          toValue: 1,
          duration: 150,
          easing: Easing.out(Easing.ease),
          useNativeDriver: true,
        }),
      ]).start();
    } else {
      Animated.parallel([
        Animated.spring(scaleAnim, {
          toValue: 0,
          tension: 200,
          friction: 15,
          useNativeDriver: true,
        }),
        Animated.timing(opacityAnim, {
          toValue: 0,
          duration: 100,
          useNativeDriver: true,
        }),
      ]).start();
    }
  }, [isFocused]);

  return (
    <Animated.View
      style={[
        styles.iosIndicator,
        {
          transform: [{ scale: scaleAnim }],
          opacity: opacityAnim,
          left: index * TAB_WIDTH + TAB_WIDTH / 2 - 3,
        },
      ]}
    />
  );
};

// iOS-style Tab Button (like Clock app)
const IOSTabButton = ({ route, isFocused, label, onPress, onLongPress }) => {
  const scaleAnim = useRef(new Animated.Value(1)).current;
  const iconScaleAnim = useRef(new Animated.Value(1)).current;
  const labelOpacityAnim = useRef(new Animated.Value(1)).current;

  useEffect(() => {
    if (isFocused) {
      Animated.parallel([
        Animated.spring(iconScaleAnim, {
          toValue: 1.15,
          tension: 250,
          friction: 20,
          useNativeDriver: true,
        }),
        Animated.spring(labelOpacityAnim, {
          toValue: 1,
          tension: 250,
          friction: 20,
          useNativeDriver: true,
        }),
      ]).start();
    } else {
      Animated.parallel([
        Animated.spring(iconScaleAnim, {
          toValue: 1,
          tension: 250,
          friction: 20,
          useNativeDriver: true,
        }),
        Animated.spring(labelOpacityAnim, {
          toValue: 0.7,
          tension: 250,
          friction: 20,
          useNativeDriver: true,
        }),
      ]).start();
    }
  }, [isFocused]);

  const onPressIn = () => {
    Animated.spring(scaleAnim, {
      toValue: 0.92,
      tension: 250,
      friction: 3,
      useNativeDriver: true,
    }).start();
  };

  const onPressOut = () => {
    Animated.spring(scaleAnim, {
      toValue: 1,
      tension: 250,
      friction: 3,
      useNativeDriver: true,
    }).start();
  };

  const getIconName = () => {
    switch (route.name) {
      case "History":
        return "time-outline";
      case "Calendar":
        return "calendar-outline";
      case "ApplyLeave":
        return "document-text-outline";
      case "Profile":
        return "person-outline";
      default:
        return "help-outline";
    }
  };

  const getIconNameFilled = () => {
    switch (route.name) {
      case "History":
        return "time";
      case "Calendar":
        return "calendar";
      case "ApplyLeave":
        return "document-text";
      case "Profile":
        return "person";
      default:
        return "help";
    }
  };

  return (
    <Pressable
      onPress={onPress}
      onLongPress={onLongPress}
      onPressIn={onPressIn}
      onPressOut={onPressOut}
      style={styles.iosTabButton}
    >
      <Animated.View
        style={[
          styles.iosTabContent,
          {
            transform: [{ scale: scaleAnim }],
          },
        ]}
      >
        {/* Icon Container */}
        <View style={styles.iosIconContainer}>
          <Animated.View
            style={{
              transform: [{ scale: iconScaleAnim }],
            }}
          >
            <Ionicons
              name={isFocused ? getIconNameFilled() : getIconName()}
              size={24}
              color={isFocused ? "#007AFF" : "#8E8E93"}
            />
          </Animated.View>
        </View>

        {/* Label */}
        <Animated.Text
          style={[
            styles.iosTabLabel,
            {
              color: isFocused ? "#007AFF" : "#8E8E93",
              opacity: labelOpacityAnim,
              fontWeight: isFocused ? "600" : "400",
            },
          ]}
          numberOfLines={1}
        >
          {label}
        </Animated.Text>
      </Animated.View>
    </Pressable>
  );
};

// Exact iOS Tab Bar (matches Apple's design)
const IOSTabBar = ({ state, descriptors, navigation }) => {
  return (
    <View style={styles.iosTabBarContainer}>
      {/* iOS-style Blur Background */}
      <BlurView intensity={100} tint="systemUltraThinMaterial" style={styles.iosTabBar}>
        {/* Tab Indicator */}
        <IOSTabIndicator index={state.index} isFocused={true} />
        
        {/* Tab Buttons */}
        {state.routes.map((route, index) => {
          const { options } = descriptors[route.key];
          const label = options.tabBarLabel || route.name;
          const isFocused = state.index === index;

          const onPress = () => {
            if (Platform.OS === "ios") {
              Haptics.impactAsync(Haptics.ImpactFeedbackType.Light);
            }
            const event = navigation.emit({
              type: "tabPress",
              target: route.key,
              canPreventDefault: true,
            });

            if (!isFocused && !event.defaultPrevented) {
              navigation.navigate(route.name);
            }
          };

          const onLongPress = () => {
            navigation.emit({
              type: "tabLongPress",
              target: route.key,
            });
          };

          return (
            <IOSTabButton
              key={route.key}
              route={route}
              isFocused={isFocused}
              label={label}
              onPress={onPress}
              onLongPress={onLongPress}
            />
          );
        })}
      </BlurView>

      {/* Bottom Divider Line (iOS style) */}
      <View style={styles.iosDivider} />
    </View>
  );
};

export default function MainTabs({ route }) {
  const user = route?.params?.user || null;
  const hist = route?.params?.hist || [];

  return (
    <Tab.Navigator
      initialRouteName="History"
      tabBar={(props) => <IOSTabBar {...props} />}
      screenOptions={{
        headerShown: false,
        // iOS-style transitions
        animation: "shift",
        animationEnabled: true,
        lazy: false,
        gestureEnabled: true,
        gestureDirection: "horizontal",
        // iOS card style
        cardStyle: {
          backgroundColor: "#F2F2F7", // iOS system background
        },
        // Exact iOS page transition
        cardStyleInterpolator: ({ current, next, layouts }) => {
          return {
            cardStyle: {
              transform: [
                {
                  translateX: current.progress.interpolate({
                    inputRange: [0, 1],
                    outputRange: [layouts.screen.width * 0.08, 0],
                  }),
                },
              ],
              opacity: current.progress.interpolate({
                inputRange: [0, 1],
                outputRange: [0.9, 1],
              }),
            },
            overlayStyle: {
              opacity: current.progress.interpolate({
                inputRange: [0, 1],
                outputRange: [0, 0.05],
              }),
            },
          };
        },
      }}
      sceneContainerStyle={{
        backgroundColor: "#F2F2F7", // iOS system gray background
        paddingBottom: 0, // Remove bottom padding
      }}
    >
      <Tab.Screen
        name="History"
        options={{
          tabBarLabel: "History",
        }}
      >
        {(props) => (
          <HistoryScreen {...props} route={{ params: { user, hist } }} />
        )}
      </Tab.Screen>

      <Tab.Screen
        name="Calendar"
        options={{
          tabBarLabel: "Calendar",
        }}
      >
        {(props) => (
          <CalendarScreen {...props} route={{ params: { user } }} />
        )}
      </Tab.Screen>

      <Tab.Screen
        name="ApplyLeave"
        options={{
          tabBarLabel: "Leave",
        }}
      >
        {(props) => (
          <ApplyLeaveScreen {...props} route={{ params: { user } }} />
        )}
      </Tab.Screen>

      <Tab.Screen
        name="Profile"
        options={{
          tabBarLabel: "Profile",
        }}
      >
        {(props) => (
          <ProfileScreen {...props} route={{ params: { user } }} />
        )}
      </Tab.Screen>
    </Tab.Navigator>
  );
}

const styles = StyleSheet.create({
  iosTabBarContainer: {
    position: "absolute",
    bottom: 0,
    left: 0,
    right: 0,
    height: 49, // Exact iOS tab bar height (flush with bottom)
    shadowColor: "#000",
    shadowOffset: {
      width: 0,
      height: -0.5,
    },
    shadowOpacity: 0.03,
    shadowRadius: 1,
    elevation: 0,
  },
  iosTabBar: {
    flexDirection: "row",
    height: "100%", // Take full height
    backgroundColor: Platform.OS === "ios" 
      ? "rgba(249, 249, 249, 0.8)" 
      : "rgba(255, 255, 255, 0.95)", // iOS tab bar color
    borderTopWidth: Platform.OS === "ios" ? 0.5 : 1,
    borderTopColor: Platform.OS === "ios" ? "rgba(0, 0, 0, 0.1)" : "#E5E5EA",
    paddingHorizontal: 0,
    paddingBottom: Platform.OS === "ios" ? 0 : 0, // Remove bottom padding
  },
  iosTabButton: {
    flex: 1,
    height: "100%",
    alignItems: "center",
    justifyContent: "center",
    paddingBottom: Platform.OS === "ios" ? 0 : 0, // Remove bottom padding
  },
  iosTabContent: {
    alignItems: "center",
    justifyContent: "center",
    width: "100%",
    height: "100%",
  },
  iosIconContainer: {
    width: 28,
    height: 28,
    alignItems: "center",
    justifyContent: "center",
    marginBottom: Platform.OS === "ios" ? 2 : 4, // iOS spacing
  },
  iosTabLabel: {
    fontSize: Platform.OS === "ios" ? 10 : 11,
    fontFamily: Platform.OS === "ios" ? "System" : "Roboto",
    letterSpacing: 0.07,
    textAlign: "center",
    marginTop: Platform.OS === "ios" ? 0 : 1, // iOS has no margin
  },
  iosIndicator: {
    position: "absolute",
    top: Platform.OS === "ios" ? 4 : 3, // Position for iOS
    width: 6,
    height: 6,
    borderRadius: 3,
    backgroundColor: "#007AFF", // iOS system blue
    shadowColor: "#007AFF",
    shadowOffset: {
      width: 0,
      height: 0,
    },
    shadowOpacity: 0.3,
    shadowRadius: 2,
  },
  iosDivider: {
    position: "absolute",
    top: 0,
    left: 0,
    right: 0,
    height: Platform.OS === "ios" ? 0.5 : 1,
    backgroundColor: Platform.OS === "ios" 
      ? "rgba(0, 0, 0, 0.1)" 
      : "rgba(0, 0, 0, 0.08)",
  },
});